category:            Language
build-type:          Simple
cabal-version:       >=1.10

library
  exposed-modules:       Shoebox.Parser, Shoebox.Data, Shoebox.Basics, Shoebox.Interface
  build-depends:       base >=4.9 && <4.10
                     , containers
                     , text
                     , parsec
                     , bytestring
                     , aeson
                     , directory
                     , filepath
                     , strict
                     , split
  hs-source-dirs:      .
  default-language:    Haskell2010

executable shoeB
  main-is:             Main.hs
  build-depends:       base >=4.9 && <4.10
                     , shoebox >=  0.1 && <0.2
  hs-source-dirs:      Main
  default-language:    Haskell2010
  ghc-options:         -threaded

test-suite specs
  type:                exitcode-stdio-1.0
  hs-source-dirs:      Test
  main-is:             Spec.hs
  build-depends:       base,
                       containers,
                       shoebox,
                       hspec,
                       QuickCheck
  other-modules:       ShoeboxDataSpec, ShoeboxParserSpec
  default-language:    Haskell2010
